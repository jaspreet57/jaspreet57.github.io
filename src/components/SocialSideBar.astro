<style>
  .email-sidelink {
    @apply w-16 right-0;
    orientation: right;
    position: fixed;
    left: auto;
    z-index: 10;
    bottom: 0;
  }

  .email-sidelink::before,
  .email-sidelink::after {
    @apply bg-primary-default block my-0 mx-auto;
    content: "";
    width: 1px;
    height: 10vh;
  }

  .email-content {
    @apply flex flex-col items-center m-0 p-0 relative;
  }

  .email-content a {
    @apply my-1 p-5 tracking-[.2em] relative inline-block font-extralight text-base;
    writing-mode: vertical-rl;
    transition: 0.3s all ease-in-out;
  }

  .email-content a:hover {
    @apply text-base-default;
    transform: translateX(-8px) translateY(-3px);
  }

  .social-icons {
    @apply w-16 left-0;
    orientation: left;
    position: fixed;
    right: auto;
    z-index: 10;
    bottom: 0;
  }

  .social-icons::before,
  .social-icons::after {
    @apply bg-primary-default block my-0 mx-auto;
    content: "";
    width: 1px;
    height: 10vh;
  }

  .social-icons ul {
    @apply flex flex-col items-center m-0 p-0 list-none;
  }

  .social-icons ul li {
    @apply mt-2;
  }

  .social-icons ul li:first-of-type {
    @apply mt-5;
  }
  .social-icons ul li:last-of-type {
    @apply mb-5;
  }

  .social-icons a {
    @apply relative block text-2xl px-4;
    transition: 0.3s all ease-in-out;
  }

  .social-icons a:hover {
    transform: translateX(8px) translateY(-3px);
  }

  .social-icon-svg {
    @apply fill-none select-none w-[1em] h-[1em] inline-block flex-shrink-0 stroke-primary-default;
    stroke-linejoin: round;
    stroke-linecap: round;
    transition: stroke 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  }

  .social-icons a:hover .social-icon-svg {
    @apply stroke-base-default;
  }
</style>

