---
import { Image } from "@astrojs/image/components";
import ProfilePic from "src/assets/images/profile1.jpg";
import ReactLogo from "src/components/svg-components/ReactLogo.astro";

const circumference = 50 * 2 * Math.PI;

const skills = {
  javascript: {
    star: 9,
  },
  react: {
    star: 9,
  },
  aws: {
    star: 7,
  },
  go: {
    star: 5
  }
};
---

<style lang="scss">
  .about-me-section {
    @apply relative /* position */
        px-4 sm:px-8 md:px-20 /* content padding */
        max-w-7xl /* width */
        mx-auto /** margins */
        /* end apply */;
  }

  .profile-pic::after {
    @apply block absolute rounded-md border-base-default border-solid border-2;
    content: "";
    top: 20px;
    left: 20px;
    z-index: -1;
    width: 100%;
    height: 100%;

    transition: top 0.3s, left 0.3s;
  }

  .group:hover .profile-pic::after {
    @apply border-primary-default;
    top: 15px;
    left: 15px;
  }

  .profile-pic img {
    top: 0px;
    left: 0px;
    transition: top 0.3s, left 0.3s;
  }

  .group:hover .profile-pic img {
    top: 5px;
    left: 5px;
  }

  .my-skills {
    // @apply mt-10 flex flex-wrap items-center gap-4;  grid grid-cols-1 gap-20 lg:grid-cols-2 lg:gap-10
    @apply mt-10 flex flex-wrap items-center gap-x-4 gap-y-14;
  }
</style>

<!-- About Me Section -->
<section class="about-me-section" id="whoami">
  <div class="section-heading mt-48">
    <h2>Who am <span class="bg-clip-text bg-gradient-to-tl from-blue-600 to-violet-600 text-transparent">I ?</span></h2>
  </div>
  <div class="md:grid grid-cols-5 grid-rows-5">
    <div
      class="group col-start-1 col-end-3 row-start-1 row-end-6 flex justify-center py-4"
    >
      <div class="w-72">
        <div class="profile-pic relative">
          <svg
            width="96"
            height="21"
            viewBox="0 0 96 21"
            aria-hidden="true"
            class="fill-base-default group-hover:fill-primary-default absolute -top-10 -left-14"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M79.2202 0.959991L62.7802 17.32L46.3301 0.959991L29.8902 17.32L13.4501 0.959991L0.410156 13.94L0.400146 17.58L13.4501 4.58999L29.8902 20.95L46.3301 4.58999L62.7802 20.95L79.2202 4.58999L93.7302 19.02L95.5402 17.19L79.2202 0.959991Z"
            ></path>
          </svg>
          <Image
            class="rounded-md relative block shadow-2xl"
            width={0}
            height={0}
            src={ProfilePic}
            alt="Jaspreet's Profile Pic"
          />
          <svg
            width="15"
            height="14"
            viewBox="0 0 15 14"
            aria-hidden="true"
            class="fill-base-default group-hover:fill-primary-default absolute bottom-8 -right-12"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M13.68 11.51L9.23 7.05998L13.68 2.61C14.24 2.05 14.24 1.12999 13.68 0.569994C13.12 0.00999391 12.2 0.00999391 11.64 0.569994L7.19002 5.02001L2.74001 0.569994C2.18001 0.00999391 1.26003 0.00999391 0.700029 0.569994C0.140029 1.12999 0.140029 2.05 0.700029 2.61L5.15004 7.05998L0.700029 11.51C0.140029 12.07 0.140029 12.99 0.700029 13.55C1.26003 14.11 2.18001 14.11 2.74001 13.55L7.19002 9.09999L11.64 13.55C12.2 14.11 13.12 14.11 13.68 13.55C14.24 12.99 14.24 12.08 13.68 11.51Z"
