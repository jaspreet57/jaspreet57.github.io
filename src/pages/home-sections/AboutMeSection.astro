              <circle
                class="text-paper-v1"
                stroke-width="10"
                stroke="currentColor"
                fill="transparent"
                r="50"
                cx="60"
                cy="60"
              >
              </circle>
              <circle
                class="bg-green-800 dark:bg-green-100"
                stroke-width="10"
                stroke-dasharray={circumference}
