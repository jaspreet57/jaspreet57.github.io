---
import { Image } from "@astrojs/image/components";
import ProfilePic from "src/assets/images/profile1.jpg";
import ReactLogo from "src/components/svg-components/ReactLogo.astro";
---

<style lang="scss">
  .about-me-section {
    @apply relative /* position */
        px-4 sm:px-8 md:px-20 /* content padding */
        max-w-7xl /* width */
        mx-auto /** margins */
        /* end apply */;
  }

  .profile-pic::after {
    @apply block absolute rounded-md border-base-default border-solid border-2;
    content: "";
    top: 20px;
    left: 20px;
    z-index: -1;
    width: 100%;
    height: 100%;

    transition: top 0.3s, left 0.3s;
  }

  .group:hover .profile-pic::after {
    @apply border-primary-default;
    top: 15px;
    left: 15px;
  }

  .profile-pic img {
    top: 0px;
    left: 0px;
    transition: top 0.3s, left 0.3s;
  }

  .group:hover .profile-pic img {
    top: 5px;
    left: 5px;
  }

  .my-skills {
    @apply mt-10 flex flex-wrap items-center gap-4;
    .palette {
      @apply w-[200px] h-[200px] relative inline-block;
      perspective: 800px;
      &__cover {
        @apply rounded-md w-full h-full absolute top-0 z-[2] overflow-hidden;
        transition: 0.3s ease;
        transform-origin: top left;
        &__border {
          width: 90%;
          height: 90%;
          border: 7px solid;
          margin: 5%;
        }
        span.skill-title {
          @apply inline-block absolute bottom-2 max-w-[60%] left-2 px-4 py-2 font-lato font-extrabold text-2xl;
        }
        span.skill-icon {
          @apply inline-block absolute top-4 left-[44px] h-24;
        }
        &__top {
          @apply absolute left-0 -ml-[32px] z-[4] opacity-0;
          width: calc(100% + 64px);
          border-radius: 3px 3px 4px 4px;
        }
      }
      &__base {
        @apply absolute bg-paper-default border-2 border-paper-v1 w-full h-full top-0 rounded-lg p-3;
      }
      &:hover,
      &:active {
        .palette__cover {
          transform: rotateX(78deg);
        }
        .palette__cover__top {
          animation: startTransition 0.17s forwards 0.1s;
        }
      }
    }

    @keyframes startTransition {
      0% {
        opacity: 0;
        top: 200px;
        transform: scale(0.5);
        height: 0;
      }
      40% {
        opacity: 1;
      }
      100% {
        top: 22px;
        opacity: 1;
        transform: scale(1);
        height: 15px;
        box-shadow: 0 5px 10px -2px rgba(0, 0, 0, 0.2);
      }
    }
  }
</style>

