<style>
  .about-me-section {
    @apply relative /* position */
        px-4 sm:px-8 md:px-20 /* content padding */
        max-w-7xl /* width */
        mx-auto /** margins */
        /* end apply */;
  }

  .profile-pic::after {
    @apply block absolute rounded-md border-base-default border-solid border-2;
    content: "";
    top: 20px;
    left: 20px;
    z-index: -1;
    width: 100%;
    height: 100%;

    transition: top 0.3s, left 0.3s;
  }

  .group:hover .profile-pic::after {
    @apply border-primary-default;
    top: 15px;
    left: 15px;
  }

  .profile-pic img {
    top: 0px;
    left: 0px;
    transition: top 0.3s, left 0.3s;
  }

  .group:hover .profile-pic img {
    top: 5px;
    left: 5px;
  }
</style>

